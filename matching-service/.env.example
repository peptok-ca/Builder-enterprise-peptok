# Flask Configuration
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production
PORT=5000

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_REQUEST_TOPIC=matching-requests
KAFKA_RESPONSE_TOPIC=matching-responses
KAFKA_ERROR_TOPIC=matching-errors
KAFKA_CONSUMER_GROUP=matching-service

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Matching Algorithm Configuration
MAX_MATCHES_PER_REQUEST=10
MIN_MATCH_SCORE=0.6
SKILL_MATCH_WEIGHT=0.3
EXPERIENCE_WEIGHT=0.25
RATING_WEIGHT=0.2
AVAILABILITY_WEIGHT=0.15
PRICE_WEIGHT=0.1

# Coach Data Configuration
COACH_DATA_TTL=3600
REFRESH_COACH_DATA_INTERVAL=1800

# External Services
BACKEND_API_URL=http://backend:3001/api

# Logging
LOG_LEVEL=INFO
